{% extends '::base.html.twig' %}

{% block body %}
    <h1>//a) Muestra todos los pedidos de un cliente seg√∫n su id</h1>
    {% for p in pedidos %}

        <div>
            <h2>Id:</h2> {{ p.id }}
            <h2>Cliente:</h2> {{ p.nombre }}
            <h2>Precio:</h2> {{ p.precio }}
            <h2>Fecha:</h2> {{ p.createdAt|date("d/m/Y H:i:s") }}
        </div>

    {% endfor %}

{% endblock %}